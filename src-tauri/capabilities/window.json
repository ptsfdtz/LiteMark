{
  "$schema": "https://schema.tauri.app/config/2.0/capabilities.json",
  "identifier": "window",
  "description": "Enable window controls",
  "windows": ["main"],
  "permissions": [
    "core:window:default",
    "core:window:allow-minimize",
    "core:window:allow-toggle-maximize",
    "core:window:allow-close",
    "core:window:allow-start-dragging"
  ]
}
