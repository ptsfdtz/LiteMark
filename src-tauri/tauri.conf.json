{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LiteMark",
  "version": "0.1.9",
  "identifier": "com.ptsfdtz.LiteMark",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LiteMark",
        "width": 1200,
        "height": 800,
        "minWidth": 1038,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["dialog", "store", "window"],
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.svg"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown", "txt"],
        "name": "Markdown",
        "description": "Markdown Document",
        "role": "Editor"
      }
    ]
  }
}
