{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mark-daily",
  "version": "0.1.0",
  "identifier": "com.ptsfdtz.tauri-get-start",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "mark-daily",
        "width": 1200,
        "height": 800,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["dialog", "store"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.svg"
    ]
  }
}
